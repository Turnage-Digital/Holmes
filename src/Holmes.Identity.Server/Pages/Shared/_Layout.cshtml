<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Holmes</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        :root {
            --primary-main: #1E3A5F;
            --primary-light: #2D5A8A;
            --primary-dark: #0F2440;
            --secondary-main: #5C7A94;
            --error-main: #D32F2F;
            --error-light: #EF5350;
            --warning-main: #ED6C02;
            --success-main: #2E7D32;
            --background-default: #F8F9FA;
            --background-paper: #FFFFFF;
            --text-primary: #1A1A1A;
            --text-secondary: #5F6368;
            --text-disabled: #9AA0A6;
            --divider: #DDE1E5;
            --grey-100: #F1F3F5;
            --grey-200: #E8EAED;
            --grey-300: #DDE1E5;
            --border-radius-card: 8px;
            --border-radius-input: 6px;
        }

        *, *::before, *::after {
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.6;
            color: var(--text-primary);
            background-color: var(--background-default);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .auth-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 24px;
        }

        .auth-card {
            background: var(--background-paper);
            border: 1px solid var(--divider);
            border-radius: var(--border-radius-card);
            padding: 32px;
            width: 100%;
            max-width: 400px;
        }

        .auth-logo {
            text-align: center;
            margin-bottom: 24px;
        }

        .auth-logo h1 {
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--primary-main);
            margin: 0;
            letter-spacing: -0.005em;
        }

        .auth-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-primary);
            margin: 0 0 8px 0;
            text-align: center;
        }

        .auth-subtitle {
            font-size: 0.875rem;
            color: var(--text-secondary);
            margin: 0 0 24px 0;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--text-primary);
            margin-bottom: 6px;
        }

        .form-control {
            width: 100%;
            padding: 12px 14px;
            font-size: 1rem;
            font-family: inherit;
            color: var(--text-primary);
            background-color: var(--background-paper);
            border: 1px solid var(--divider);
            border-radius: var(--border-radius-input);
            outline: none;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

        .form-control:hover {
            border-color: var(--secondary-main);
        }

        .form-control:focus {
            border-color: var(--primary-main);
            box-shadow: 0 0 0 2px rgba(30, 58, 95, 0.1);
        }

        .form-control.input-validation-error {
            border-color: var(--error-main);
        }

        .form-control.input-validation-error:focus {
            box-shadow: 0 0 0 2px rgba(211, 47, 47, 0.1);
        }

        .form-helper {
            font-size: 0.75rem;
            color: var(--text-secondary);
            margin-top: 4px;
        }

        .field-validation-error {
            font-size: 0.75rem;
            color: var(--error-main);
            margin-top: 4px;
            display: block;
        }

        .validation-summary-errors {
            background-color: rgba(211, 47, 47, 0.08);
            border-radius: var(--border-radius-input);
            padding: 12px 16px;
            margin-bottom: 20px;
        }

        .validation-summary-errors ul {
            margin: 0;
            padding: 0 0 0 20px;
            color: var(--error-main);
            font-size: 0.875rem;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 10px 24px;
            font-size: 0.875rem;
            font-weight: 500;
            font-family: inherit;
            line-height: 1.5;
            text-decoration: none;
            border-radius: var(--border-radius-input);
            border: none;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        .btn-primary {
            background-color: var(--primary-main);
            color: #FFFFFF;
        }

        .btn-primary:hover {
            background-color: var(--primary-light);
        }

        .btn-primary:disabled {
            background-color: var(--text-disabled);
            cursor: not-allowed;
        }

        .btn-secondary {
            background-color: transparent;
            color: var(--primary-main);
            border: 1px solid var(--divider);
        }

        .btn-secondary:hover {
            background-color: var(--grey-100);
        }

        .btn-block {
            width: 100%;
        }

        .btn-lg {
            padding: 12px 24px;
            font-size: 0.9375rem;
        }

        .alert {
            padding: 12px 16px;
            border-radius: var(--border-radius-input);
            margin-bottom: 20px;
            font-size: 0.875rem;
        }

        .alert-success {
            background-color: rgba(46, 125, 50, 0.08);
            color: #1B5E20;
        }

        .alert-error {
            background-color: rgba(211, 47, 47, 0.08);
            color: #C62828;
        }

        .alert-warning {
            background-color: rgba(237, 108, 2, 0.08);
            color: #E65100;
        }

        .alert-info {
            background-color: rgba(2, 136, 209, 0.08);
            color: #01579B;
        }

        .text-link {
            color: var(--primary-main);
            text-decoration: none;
            font-weight: 500;
        }

        .text-link:hover {
            text-decoration: underline;
        }

        .text-center {
            text-align: center;
        }

        .text-muted {
            color: var(--text-secondary);
        }

        .mt-3 {
            margin-top: 16px;
        }

        .mt-4 {
            margin-top: 24px;
        }

        .mb-3 {
            margin-bottom: 16px;
        }

        .password-requirements {
            font-size: 0.75rem;
            color: var(--text-secondary);
            margin-top: 8px;
            padding-left: 16px;
        }

        .password-requirements li {
            margin-bottom: 2px;
        }

        .material-icons {
            font-size: 20px;
            vertical-align: middle;
            margin-right: 8px;
        }

        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 24px 0;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid var(--divider);
        }

        .divider span {
            padding: 0 12px;
            font-size: 0.75rem;
            color: var(--text-secondary);
            text-transform: uppercase;
        }

        @@media (max-width: 480px) {
            .auth-card {
                padding: 24px;
            }
        }
    </style>
</head>
<body>
<main class="auth-container">
    <div class="auth-card">
        <div class="auth-logo">
            <h1>Holmes</h1>
        </div>
        @RenderBody()
    </div>
</main>

@await RenderSectionAsync("Scripts", false)
</body>
</html>
