@page
@model Holmes.Identity.Server.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<h2 class="auth-title">Change Password</h2>

@if (Model.IsExpired && !Model.ChangeComplete)
{
    <div class="alert alert-warning">
        <span class="material-icons">warning</span>
        Your password has expired. Please set a new password to continue.
    </div>
}

@if (Model.ChangeComplete)
{
    <div class="alert alert-success">
        Your password has been changed successfully.
    </div>

    <div class="mt-4 text-center">
        @if (!string.IsNullOrEmpty(Model.ReturnUrl) && Model.ReturnUrl != "~/")
        {
            <a href="@Model.ReturnUrl" class="btn btn-primary btn-block btn-lg">Continue</a>
        }
        else
        {
            <p class="text-muted">You may now close this window or continue using the application.</p>
        }
    </div>
}
else
{
    <p class="auth-subtitle">Enter your current password and choose a new one.</p>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <div class="form-group">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.CurrentPassword" class="form-label">Current Password</label>
            <input asp-for="Input.CurrentPassword" class="form-control" autocomplete="current-password" />
            <span asp-validation-for="Input.CurrentPassword" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.NewPassword" class="form-label">New Password</label>
            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" />
            <span asp-validation-for="Input.NewPassword" class="field-validation-error"></span>
            <ul class="password-requirements">
                <li>At least 12 characters</li>
                <li>At least one uppercase letter</li>
                <li>At least one lowercase letter</li>
                <li>At least one number</li>
                <li>Cannot be any of your last 10 passwords</li>
            </ul>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="form-label">Confirm New Password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
            <span asp-validation-for="Input.ConfirmPassword" class="field-validation-error"></span>
        </div>

        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

        <button type="submit" class="btn btn-primary btn-block btn-lg">Change Password</button>
    </form>

    @if (!Model.IsExpired)
    {
        <div class="mt-4 text-center">
            <a asp-page="./Login" class="text-link">Back to Sign In</a>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
